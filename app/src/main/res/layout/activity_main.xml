<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.administrator.rsa_test.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_encode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onEncode"
            android:text="加密"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加密后文本："/>

        <TextView
            android:textColor="#a1a1a1"
            android:id="@+id/tv_encode_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_decode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onDencode"
            android:text="解密"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解密后文本："/>

        <TextView
            android:textColor="#a17272"
            android:id="@+id/tv_dencode_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="java端公钥转换成C#公钥："/>

        <TextView
            android:textColor="#82a172"
            android:id="@+id/tv_publicKey_JavaToC"
            android:layout_width="wrap_content"
            android:textIsSelectable="true"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="java端私钥转换成C#私钥："/>

        <TextView
            android:textColor="#7276a1"
            android:id="@+id/tv_private_JavaToC"
            android:layout_width="wrap_content"
            android:textIsSelectable="true"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</ScrollView>